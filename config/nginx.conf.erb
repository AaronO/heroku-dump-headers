daemon off;
#Heroku dynos have at least 4 cores.
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
    use epoll;
    accept_mutex on;
    worker_connections 1024;
}

http {
    ##
    # General
    ##

    # Allow "large uploads"
    # such as when git server pushes tar.gz
    client_max_body_size 100m;

    ##
    # GZip
    ##

    etag on;
    gzip on;
    gzip_comp_level   6;
    gzip_min_length 512;
    gzip_proxied      any;
    gzip_buffers      16 8k;
    gzip_types        text/plain text/css application/x-javascript application/javascript text/xml application/xml application/xml+rss text/javascript image/svg+xml application/json application/atom+xml application/x-font-ttf;

    ##
    # Logs
    ##

    log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
    access_log logs/nginx/access.log l2met;
    error_log logs/nginx/error.log;

    ##
    # Misc
    ##

    server_tokens off;
    sendfile on;

    ##
    # Upstream
    ##

    upstream app_server {
        server unix:/tmp/nginx.socket fail_timeout=0;
    }

    ##
    # Static assets
    ##

    server {
        listen <%= ENV["PORT"] %>;
        server_name www.gitbook.com;
        keepalive_timeout 5;

        # Our mime definitions
        include mime.types;

        location ~ ^/assets/(.*) {
          root /app;
          try_files /public/assets/$1 /node_modules/gitbook-styleguide/assets/$1 /node_modules/gitbook-themes/$1 =404;
          access_log off;
        }

        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_pass http://app_server/;
        }
    }

    ##
    # Reverse proxy
    ##

    server {
        listen <%= ENV["PORT"] %>;
        server_name _;
        keepalive_timeout 5;

        location / {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_pass http://app_server/;
        }
    }
}
